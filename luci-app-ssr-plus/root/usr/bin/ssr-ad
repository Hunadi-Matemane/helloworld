#!/bin/sh -e
cp /tmp/ssr-update.$1 /tmp/adnew.conf
if ! (grep -wq "address=" /tmp/adnew.conf); then
	cat /tmp/adnew.conf | grep ^\|\|[^\*]*\^$ | sed -e 's:||:address\=\/:' -e 's:\^:/:' >/tmp/ssr-update.$1
fi
for line in $(cat /etc/ssr/allow.list); do sed -i "/^address\=\/$line\//d" /tmp/ssr-update.$1; done
rm -f /tmp/adnew.conf
